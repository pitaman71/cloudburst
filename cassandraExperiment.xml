<hive name="CassandraExperiment">
    <goalProto name="setupCassandraNode" symbol="goal">
        <variable name="nodeUser" type="username"/>
        <variable name="nodeAddress" type="usa.darpa.rfc971.ipv4address"/>
        <variable name="nodeIdentity" type="localFilePath"/>
        <variable name="dseUser" type="username"/>
        <variable name="dsePassword" type="password"/>
        <pre><defined><rvalue>goal.nodeUser</rvalue></defined></pre>
        <pre><defined><rvalue>goal.nodeAddress</rvalue></defined></pre>
        <pre><defined><rvalue>goal.nodeIdentity</rvalue></defined></pre>
        <pre><defined><rvalue>goal.dseUser</rvalue></defined></pre>
        <pre><defined><rvalue>goal.dsePassword</rvalue></defined></pre>
    </goalProto>
    <goalProto name="startCassandraNode" symbol="goal">
        <variable name="nodeUser" type="username"/>
        <variable name="nodeAddress" type="usa.darpa.rfc971.ipv4address"/>
        <variable name="nodeIdentity" type="localFilePath"/>
        <variable name="dseUser" type="username"/>
        <variable name="dsePassword" type="password"/>
        <pre><defined><rvalue>goal.nodeUser</rvalue></defined></pre>
        <pre><defined><rvalue>goal.nodeAddress</rvalue></defined></pre>
        <pre><defined><rvalue>goal.nodeIdentity</rvalue></defined></pre>
        <pre><defined><rvalue>goal.dseUser</rvalue></defined></pre>
